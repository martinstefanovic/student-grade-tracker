<!-- * Main header -->
<%- include("./partials/header") %>

<!-- * Main content -->
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-6">
            <form action="/subjects/add" method="POST"> 
                <div class="mb-3">
                    <input type="hidden" class="form-control" name="grade" value="0">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Subject name</label>
                    <input type="text" class="form-control" name="subject" placeholder="Klijent server sistemi">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Goal grade</label>
                    <input type="text" class="form-control" name="goalGrade" placeholder="6-10">
                </div>
                <button type="submit" class="btn btn-main">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-plus" viewBox="0 0 16 16">
                      <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z"/>
                      <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                    </svg>
                    <span>Dodaj predmet</span>
                </button>
            </form>
        </div>
        <div class="col-6">
            <div class="main-card">
                <div class="main-card-header">
                    <span class="font-weight-normal">SUBJECT LIST</span>
                    <span class="badge bg-secondary"> <%= subjects.length %> </span>
                </div>
                <% subjects.forEach( subject => { %>
                <div class="sub-card">
                    <div class="sub-card-body d-flex align-items-center">
                        
                        <div class="item-letter me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= subject.subject %>">
                            <%= subject.subject.charAt(0) %>
                        </div>
                        <strong><%= subject.subject %></strong>
                        
                    </div>
                    <div class="sub-card-footer">
                        <div class="date-added">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-event" viewBox="0 0 16 16">
                              <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
                              <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                            </svg>
                             <span><%= subject._id.getTimestamp().toString().substring(4,25) %></span>
                        </div>
                        <a href="/subjects/delete/<%= subject._id %>" class="btn-small" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete subject">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </a>
                    </div>
                </div>
                <%  }) %>
            </div>
        </div>
    </div>
</div>




<!-- * Footer -->
<%- include("./partials/footer") %>