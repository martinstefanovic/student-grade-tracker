
<!-- *Main header -->
<%- include("./partials/header") %>


<div class="container-fluid mt-4">
    <div class="row">
      <div class="col-6">
        <form action="add/todo" method="POST" class="">

          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Subject / Important level</label>
            <div class="input-group">
              <select class="form-select" name="subject">
                <option selected>Chose subject</option>
                <% subjects.forEach( subject => { %>
                  <option value="<%= subject.subject %>"><%= subject.subject %></option>
                <%  }) %>
              </select>
              <select class="form-select" name="importantType" >
                <option selected>Chose important level</option>
                <option value="normal">Normal</option>
                <option value="important">Important</option>
                <option value="critical">Critical</option>
              </select>
            </div>
          </div>

          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Todo title</label>
            <input type="text" class="form-control" name="title" placeholder="Seminarski">
          </div>

          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Todo description</label>
            <textarea class="form-control" name="todo" placeholder="Zavrsiti seminarski rad na temu..." rows="3"></textarea>
          </div>

          <button type="submit" class="btn btn-main">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-plus" viewBox="0 0 16 16">
              <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z"/>
              <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
            </svg>
            <span>Add todo</span>
          </button>

        </form>
      </div>
      <div class="col-6">
        <div class="main-card">
          <div class="main-card-header">
              <span class="font-weight-normal">LATEST ASIGMENT</span>
          </div>
          <div class="sub-card">
            <div class="sub-card-body">
              <strong><%= lastTodo[0].title %></strong>
              <p><%= lastTodo[0].todo %></p>
              <span class="severity <%= lastTodo[0].importantType %>"><%= lastTodo[0].importantType %></span>
            </div>
            <div class="sub-card-footer">

              <div class="date-added">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-event" viewBox="0 0 16 16">
                  <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
                  <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                </svg>
                 <span><%= lastTodo[0]._id.getTimestamp().toString().substring(4,25) %></span>
              </div>
              <div class="item-letter" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= lastTodo[0].subject %>">
                <%= lastTodo[0].subject.charAt(0) %>
              </div>
            </div>
          </div>
      </div>
      </div>
    </div>


