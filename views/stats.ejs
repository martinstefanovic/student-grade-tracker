<!-- * Main header -->
<%- include("./partials/header") %>


<!-- * Main content -->
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-6">
            <div class="main-card">
                <div class="main-card-header">
                    <span class="text-uppercase">General statistic</span>
                </div>
                <div class="sub-card">
                    <div class="sub-card-body d-flex justify-content-around">
                        <div class="d-flex flex-column align-items-center">
                            <h1><%= averageGrade %></h1>
                            <span>Current average grade</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <h1><%= averageGoalGrade %></h1>
                            <span>Goal average grade</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="main-card">
                <div class="main-card-header">
                    <span class="text-uppercase">Tasks statistic</span>
                </div>
                <div class="sub-card">
                    <div class="sub-card-body">
                        <div class="d-flex flex-wrap">
                            <% allSubjects.forEach( (subject, index) => { %>

        
                                <% let i=0; allTodos.forEach( todo => { %>
                                    <% if(subject.subject === todo.subject){  %>
            
                                    <% i++ } %>
                                <%  }) %>  
                                <div class="d-flex align-items-center mb-3 me-4">
                                    <div class="progress me-2" style="width: 20px">
                                        <div class="progress-bar p-bar-<%= index %>" role="progressbar" style="width: 20px" ></div>
                                    </div>
                                    <span><%= subject.subject %></span>
                                </div>   
    
                            <%  }) %>
                        </div>
                        <div class="progress mt-3" style="height: 20px;">
                            <% allSubjects.forEach( (subject, index) => { %>
            
                                <% let i=0; allTodos.forEach( todo => { %>
                                    <% if(subject.subject === todo.subject){  %>
            
                                    <% i++ } %>
                                <%  }) %>     
                                <div class="progress-bar p-bar-<%= index %>" role="progressbar" style="width: <%= i * barChunk %>%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"><%= i %> (<%= i * barChunk %>%) </div>
                
                            <%  }) %>
                        </div>
                    </div>
                </div>

            </div>

            <div class="main-card mt-4">
                <div class="main-card-header">
                    <span class="text-uppercase">Passed Exams</span>
                </div>
                <div class="sub-card">
                    <div class="sub-card-body">
                            <% allSubjects.forEach( (subject, index) => { %>
                                <% if(subject.passed == true){  %>
                                    <span><%= subject.subject %></span> <br>
                                <% } %>
                            <%  }) %>

                            <div class="progress mt-4" style="height: 20px;">
                                <div class="progress-bar" role="progressbar" style="width: <%= barPassedChunk %>%;" ><%= barPassedChunk %>%</div>
                            </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- * Footer -->
<%- include("./partials/footer") %>